                <services>oai-nr-ue</services>
                <nb_healthy>3</nb_healthy>
        </testCase>

        <testCase id="000005">
                <class>DeployGenObject</class>
                <desc>Deploy Second OAI 5G NR-UE RF sim SA</desc>
                <yaml_path>yaml_files/5g_rfsimulator_flexric</yaml_path>
